$TYPES_BLOCK_BORDERRADIUS=false unless $TYPES_BLOCK_BORDERRADIUS is defined
$TYPES_BLOCK_BORDERTOP=false unless $TYPES_BLOCK_BORDERTOP is defined
$TYPES_BLOCK_BORDERBOTTOM=false unless $TYPES_BLOCK_BORDERBOTTOM is defined
$TYPES_BLOCK_PADDING=5px 10px unless $TYPES_BLOCK_PADDING is defined

.block{
	position:relative
	border-radius:$TYPES_BLOCK_BORDERRADIUS if $TYPES_BLOCK_BORDERRADIUS
	border-top:$TYPES_BLOCK_BORDERTOP if $TYPES_BLOCK_BORDERTOP
	border-bottom:$TYPES_BLOCK_BORDERBOTTOM if $TYPES_BLOCK_BORDERBOTTOM
	padding:$TYPES_BLOCK_PADDING if $TYPES_BLOCK_PADDING
}