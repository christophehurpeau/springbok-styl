.arrow
	width 0
	height 0
	line-height 0
	border-style solid
	display block

a.arrow
	outline none

/* http://apps.eky.hk/css-triangle-generator/ */

arrowLeft($halfheight,$width,$color)
	border-width $halfheight $width $halfheight 0
	border-color transparent $color transparent transparent
	if $IE_COMPATIBILITY
		_border-color pink $color pink pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowLeftOverride($color)
	border-color transparent $color transparent transparent
	if $IE_COMPATIBILITY
		_border-color pink $color pink pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowRight($halfheight,$width,$color)
	border-width $halfheight 0 $halfheight $width
	border-color transparent transparent transparent $color
	if $IE_COMPATIBILITY
		_border-color pink pink pink $color
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowRightOverride($color)
	border-color transparent transparent transparent $color
	if $IE_COMPATIBILITY
		_border-color pink pink pink $color
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowUp($height,$width,$color)
	border-width 0 $width $height $width
	border-color transparent transparent $color transparent
	if $IE_COMPATIBILITY
		_border-color pink pink $color pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowUpOverride($color)
	border-color transparent transparent $color transparent
	if $IE_COMPATIBILITY
		_border-color pink pink $color pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowDown($height,$width,$color)
	border-width $height $width 0 $width
	border-color $color transparent transparent transparent
	if $IE_COMPATIBILITY
		_border-color $color pink pink pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}

arrowDownOverride($color)
	border-color $color transparent transparent transparent
	if $IE_COMPATIBILITY
		_border-color $color pink pink pink
		@css{ _filter:progid:DXImageTransform.Microsoft.Chroma(color=pink)}
