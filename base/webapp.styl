div.startloading
	position:absolute;
	width:500px; height:50px; padding:150px 5px; line-height:25px;
	top:50%; left:50%;
	overflow:visible;
	z-index:11;
	margin-top:-200px;
	margin-left:-250px;
	if $HeaderMenuLinkBorder
		border:1px solid $HeaderMenuLinkBorder
	
	bg $HeaderMenuLinkBackground;
	if $FixedVariableShadow
		boxShadow $FixedVariableShadow 8px;
	border-radius:16px;
	color:findBestFgColor($HeaderMenuLinkColor);
	text-align:center;
	font-size:1.4em;


