div.startloading
	absolute top 50% left 50%
	width 500px
	height 50px
	padding 150px 5px
	line-height 25px
	overflow visible
	z-index 11;
	margin-top -200px
	margin-left -250px
	if $HeaderMenuLinkBorder
		border 1px solid $HeaderMenuLinkBorder
	
	bg $HeaderMenuLinkBackground;
	if $FixedVariableShadow
		boxShadow $FixedVariableShadow 8px;
	border-radius 16px
	color findBestFgColor($HeaderMenuLinkBackground)
	text-align center
	font-size 1.4em


.updating{background:url('../sync-14.gif');width:14px;height:14px}
.syncing{background:url('../sync-server.gif');width:16px;height:16px}