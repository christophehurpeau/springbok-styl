$FormLegendColor ?= false
$FormSmallLabelWidth ?= 60px
$FormMediumLabelWidth ?= 90px
$FormLabelWidth ?= 180px
$FormLargeLabelWidth ?= 280px
$FormLegendTextShadow ?= false

form
	/* Corrects margin displayed oddly in IE 6/7. */
	margin 0

fieldset
	bg $FormFieldsetBackground
	border $FormFieldsetBorder
	margin 0
	padding 10px

legend
	bg $FormLegendBackground
	border $FormLegendBorder
	color $FormLegendColor if $FormLegendColor
	text-shadow $FormLegendTextShadow if $FormLegendTextShadow
	font-weight bold
	padding 2px 6px
	*margin-left: -7px /* Corrects alignment displayed oddly in IE 6/7. */

button, input, select, textarea
	box-sizing border-box
	margin 0 /* Addresses margins set differently in IE 6/7, Firefox 3+, Safari 5, and Chrome. */
	vertical-align baseline
	*vertical-align: middle /* Improves appearance and consistency in all browsers */

textarea
	resize vertical;

/* Re-set default cursor for disabled elements. */
button[disabled], input[disabled]
	cursor default;





div.input label, div.textarea label, div.checkboxes > label, form .radio .title
	display block
	display inline-block
	width $FormLabelWidth
	padding 1px 3px
	vertical-align top

div.input.select label,div.radio label
	vertical-align middle
.largeLabel div.input label,.largeLabel .radio .title
	width $FormLargeLabelWidth

.smallLabel div.input label,.smallLabel .radio .title,.smallRadioLabel div.input .radioLabel
	width $FormSmallLabelWidth

.mediumLabel div.input label,.mediumLabel .radio .title,.mediumRadioLabel div.input .radioLabel
	width $FormMediumLabelWidth

.labelWp100 div.input label, .labelWp100 div.textarea label
	width auto


@includeCore 'base/buttons';

input[type=submit],button
	margin 5px 0 3px 1px

input[type=radio],input[type=checkbox]
	vertical-align bottom
	margin 0 3px
	padding: 0 /* Corrects excess space around these inputs in IE8/9 */
	*width: 13px
	*height: 13px /* Corrects excess space around these inputs in IE7 */

input.wp100, div input.wp100, form textarea
	width 100%


div input, div textarea
	background #EDEDED
	color #4C4C4C
	border 1px solid #B4B4B4
	transition all .3s
	text-shadow 0 -1px 0 rgba(0, 0, 0, 0.1)
	outline none

div input:hover, div textarea:hover
	background-color #FBFBFB
div input:focus, div textarea:focus
	background-color #FFF
	box-shadow 0 0 3px rgba(127, 127, 127, 0.5);

div .input
	margin 1px 0
	position relative

div .textarea
	margin 2px 0

div .input.text input,div .textarea textarea{border:1px solid #B4B4B4; margin:0;}
div .input.text input[disabled="disabled"],form .text input[readonly="readonly"]{color:#333; background-color:#D5D5D5;}

input.placeholder, .input.text input.placeholder
	color:#777
	font-style:italic

form .checkbox{padding:2px 0}
form div.input.checkbox label{width:auto}
form .radio .yesDiv{padding-left:20px}

form div.center,form div.italic{margin:7px 0 7px}

body form div.submit{margin:7px 0 0}
form div.submit input{margin:0}


/* oneline */
form.oneline div.input,form.oneline div.submit
	display:inline-block;
	margin-top:0

/* TABLE */

table.form{width:100%;border-spacing:5px;}
.form td.one input,.form td.one select{width:99%}
.form td.submit{width:80px; margin:0}
.form td.submit input,.form td input.submit{width:100%; padding:1px 0; margin:0;}
tr.form td{border:1px solid #C4C4C4; padding:0}

/* */

.form input
	border 1px transparent
	margin 0
	padding 2px 0
	width 100%

.form select
	border 0
	margin 0
	padding 2px 0;
	width 100%;
	
	appearance normal
	
	bg-gradient-tb #555555,#444444
	border-radius 2px
	color #EEE
	text-shadow #999 0 0 1px
	
	outline 0

.form select:focus
	bg-gradient-tb #666666,#555555
	outline 0
	border 0

.form select option
	outline 0
	background #666
	text-shadow none

.form select option:focus, .form select option:hover
	background #777


.checkboxes.mosaic{
	float:left; width:100%; clear:both;
	.checkbox, label{float:left;display:block;margin:0 5px 3px 2px;}
}

input.bigInput, .big .text input
	font-size: 1.1em;
	height: 28px
	line-height: 28px
	background: #F5F5F5
	color: #4C4C4C
	box-shadow: 0 0 10px #eee inset
	border-radius: 6px

.w300{
	input{ width:280px; }
	fieldset input{width:278px; } /* -2px si fieldset */
	div.text label{width:270px}
}
.w400{
	input{ width:380px; }
	fieldset input{ width:378px; } /* -2px si fieldset */
	div.text label{width:370px}
}
.w480{
	input{ width:460px; }
	fieldset input{ width:458px; } /* -2px si fieldset */
	div.text label{width:450px}
}
.w300 input.submit,.w400 input.submit,.w480 input.submit{margin:5px 0}


.big .text label{
	height:30px; line-height:30px;
	font-size:1.2em;
}
input.bigInput:hover, .big .text input:hover{background:#FAFAFA}
input.bigInput:focus, .big .text input:focus{background:#FFF}
input.submit.big, .big input.submit{
	padding:4px 15px;
}

form input.submitIcon{
	appearance:normal;
	border:0;
	margin:2px 0 1px 1px;
	vertical-align: middle;
}

