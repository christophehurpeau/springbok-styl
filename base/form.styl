.form input{
	border:0;
	margin:0;padding:2px 0;
	width:100%;
}
.form select
	border:0
	margin:0;padding:2px 0;
	width:100%;
	
	appearance normal
	
	bg-gradient-tb #555555,#444444
	border-radius 2px
	color:#EEE;
	text-shadow:#999 0 0 1px;
	
	outline:0;

.form select:focus{
	bg-gradient-tb #666666,#555555
	outline:0;border:0;
}
.form select option{
	outline:0;
	background:#666;
	text-shadow:none;
}
.form select option:focus,.form select option:hover{
	background:#777;
}

.checkboxes.mosaic{
	float:left; width:100%; clear:both;
	.checkbox,label{float:left;display:block;margin:0 5px 3px 2px;}
}

input.bigInput, .big .text input{
	font-size:1.1em;
	height:28px; line-height:28px;
	background:#F5F5F5;color:#4C4C4C;
	border:1px solid #ccc;
	box-shadow:0 0 10px #eee inset;
	border-radius:6px;
}
.w300{
	input{ width:280px; }
	fieldset input{width:278px; } /* -2px si fieldset*/
	div.text label{width:270px}
}
.w400{
	input{ width:380px; }
	fieldset input{ width:378px; } /* -2px si fieldset*/
	div.text label{width:370px}
}
.w480{
	input{ width:460px; }
	fieldset input{ width:458px; } /* -2px si fieldset*/
	div.text label{width:450px}
}
.w300 input.submit,.w400 input.submit,.w480 input.submit{margin:5px 0}


.big .text label{
	height:30px; line-height:30px;
	font-size:1.2em;
}
input.bigInput:hover, .big .text input:hover{background:#FAFAFA}
input.bigInput:focus, .big .text input:focus{background:#FFF}
input.submit.big, .big input.submit{
	padding:4px 15px;
}

form input.submitIcon{
	appearance:normal;
	border:0;
	margin:2px 0 1px 1px;
	vertical-align: middle;
}

