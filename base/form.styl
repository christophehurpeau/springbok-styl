/* VALIDATION */
form .required
	font-weight bold

form .required label:after
	color #e32
	content '*'
	display inline


$ValidationValidBorder ?= 1px solid #2EB82E
$ValidationInvalidBorder ?= 1px solid #F33
$ValidationInvalidShadow ?= 0 0 1.5px 1px #f1cccc

input.validation-invalid, textarea.validation-invalid, select.validation-invalid
	border $ValidationInvalidBorder if $ValidationInvalidBorder
	box-shadow $ValidationInvalidShadow if $ValidationInvalidShadow

input.validation-valid:focus,textarea.validation-valid:focus
	border $ValidationValidBorder if $ValidationValidBorder

.validation-advice
	margin 5px 0;
	padding 5px;
	background-color #F33;
	color #FFF;
	font-weight bold;

.validation-advice p
	margin 0
