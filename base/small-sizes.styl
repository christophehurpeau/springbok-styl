/* quick smartphone reset */
@media (max-width: 640px) {
		[class*="w160"], [class*="w200"], [class*="w280"],
		[class*="w300"], [class*="w350"], [class*="w380"],
		[class*="w400"], [class*="w420"], [class*="w600"],
		[class*="wp1"],[class*="wp2"],[class*="wp3"],[class*="wp4"],[class*="wp5"],
		[class*="wp6"],[class*="wp7"],[class*="wp8"],[class*="wp9"] {
				width: auto;
		}
		[class*="wp100"]{width:100%}
		
		[class*="h600"],[class*="h400"],[class*="h200"],[class*="h300"]{
				height: auto;
		}
		
		/* PAGE.SCSS */
		
		body{
			font-size:100% !important;
		}
		h1{font-size:1.35em !important}
		h2{font-size:1.20em !important}
		h3{font-size:1.18em !important}
		h4{font-size:1.05em !important}
		h5{font-size:0.8em !important}
		
